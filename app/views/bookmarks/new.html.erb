
<h2>New Bookmark</h2>

<%= simple_form_for [@list, @bookmark] do |b| %>
  <%= b.association :movie, prompt: "Select a movie",
  collection: Movie.all.order(:title),
  input_html: { data: { controller: "slect" } } %>
  <%= b.input :comment, placeholder: 'Minimum 6 characters' %>
  <%= b.submit 'Add bookmark', class: 'btn btn-primary' %>
<% end %>
