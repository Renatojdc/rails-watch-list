<h2>List details</h2>

<ul>
  <% @list.movies.each do |l| %>
  <li>
    <div class="card" style="width: 18rem;">
      <img src="<% l.poster_url %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= l.title %></h5>
          <p class="card-text"><%= l.overview %></p>
          <p class="card-text"><%= l.rating %></p>
        </div>
    </div>
  </li>
  <% end %>
</ul>



<br>
<%= link_to 'Add a Bookmark', new_list_bookmark_path(@list) %>
<br>
<%= link_to 'Back to Lists', lists_path %>
